# Security Headers for Cloudflare Pages
# https://developers.cloudflare.com/pages/configuration/headers/

/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()
  
  # Content Security Policy
  # Note: Allows necessary external resources (fonts, icons, Calendly, analytics)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://assets.calendly.com https://www.googletagmanager.com https://www.google-analytics.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com https://assets.calendly.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https: blob:; connect-src 'self' https://www.google-analytics.com https://analytics.google.com https://api.calendly.com; frame-src https://calendly.com https://www.google.com; object-src 'none'; base-uri 'self'; form-action 'self' https://formspree.io;
  
  # HSTS (Be careful - this is a strong commitment)
  # Uncomment when ready for production HTTPS enforcement
  # Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Cache Control for HTML (short cache)
/*.html
  Cache-Control: public, max-age=3600

# Cache Control for Assets (long cache)
/css/*
  Cache-Control: public, max-age=31536000, immutable

/js/*
  Cache-Control: public, max-age=31536000, immutable

/img/*
  Cache-Control: public, max-age=31536000, immutable

/videos/*
  Cache-Control: public, max-age=31536000, immutable

# Favicon
/favicon.ico
  Cache-Control: public, max-age=86400

# Sitemap and Robots
/sitemap.xml
  Cache-Control: public, max-age=86400

/robots.txt
  Cache-Control: public, max-age=86400
